---
import "../css/markdown.css";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout center={true} title={frontmatter.title}>
    <main>
        <article>
            <h1><a href="/blag/">&larr;</a> {frontmatter.title}</h1>
            <h3>{frontmatter.description}</h3>
        </article>
        <br />
        <div role="article" class="markdown prose">
            <slot />
        </div>
    </main>
</Layout>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap");

    :root {
        font-family: system-ui, sans-serif;
    }

    main {
        padding: 1.5rem;
        padding: 0;
        margin: 10px;
        max-width: 90vw
    }

    @media only screen and (max-width: 600px) {
        main {
            max-width: calc(100vw - 25px);
        }
    }

    .prose {
        max-width: 75ch !important;
    }

    h1 {
        font-weight: 800;
        font-family: system-ui, sans-serif;
        margin: 0;
        @apply text-3xl;
    }

    h3 {
        font-weight: 600;
        font-family: system-ui, sans-serif;
        margin: 0;
        @apply text-xl;
    }
</style>
